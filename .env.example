# LLM Provider: gemini or openai
LLM_PROVIDER=gemini

# LLM API Configuration
# For Gemini (default): https://generativelanguage.googleapis.com
# For OpenAI: https://api.openai.com/v1
LLM_BASE_URL=https://generativelanguage.googleapis.com
LLM_API_KEY=your_api_key_here
LLM_MODEL=gemini-2.5-flash

# Bot Configuration
BOT_NAME=wechat-meeting-scribe

# Summarization Triggers
SUMMARY_INTERVAL_MINUTES=30
SUMMARY_MESSAGE_COUNT=50
SUMMARY_KEYWORD=@bot 总结

# Message buffer settings
MAX_BUFFER_SIZE=200
MIN_MESSAGES_FOR_SUMMARY=5
CONCURRENT_SUMMARY=10

# Media Support
MEDIA_IMAGE_ENABLED=true
MEDIA_VIDEO_ENABLED=true
MEDIA_AUDIO_ENABLED=true
MEDIA_PDF_ENABLED=true
MEDIA_MAX_IMAGE_BYTES=10485760  # 10MB
MEDIA_MAX_VIDEO_BYTES=20971520  # 20MB
MEDIA_MAX_AUDIO_BYTES=10485760  # 10MB
MEDIA_MAX_PDF_BYTES=10485760    # 10MB
